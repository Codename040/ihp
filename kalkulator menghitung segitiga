  <div class="container">
    <h2>Kalkulator Luas Segitiga</h2>

    <label for="alas">Alas (cm):</label>
    <input type="number" id="alas" placeholder="Masukkan alas segitiga">

    <label for="tinggi">Tinggi (cm):</label>
    <input type="number" id="tinggi" placeholder="Masukkan tinggi segitiga">

    <button onclick="hitungLuas()">Hitung Luas</button>

    <div id="hasil"></div>
  </div>

  <script>
    function hitungLuas() {
      const alas = parseFloat(document.getElementById("alas").value);
      const tinggi = parseFloat(document.getElementById("tinggi").value);
      const hasil = document.getElementById("hasil");

      if (isNaN(alas) || isNaN(tinggi)) {
        hasil.innerHTML = "<span style='color: red;'>Masukkan angka yang valid!</span>";
        return;
      }

      const luas = 0.5 * alas * tinggi;
      hasil.innerHTML = `Luas segitiga adalah <strong>${luas.toFixed(2)} cmÂ²</strong>`;
    }
  </script>

